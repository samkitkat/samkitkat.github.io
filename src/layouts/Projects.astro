---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, projectURL, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			hr {
				border-top: 1px solid #A3B18A;
				margin: 1rem 0;
			}
			a {
				text-decoration: #a3b18a underline;
			}
			p {
				font-weight: ;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>

				<h1 class="contentTitle">{title}</h1>
				<a href={projectURL} target="_blank" rel="noopener noreferrer">
					<h2>âžª view site</h2>
				</a>
				{pubDate && <p class="date">{pubDate.toLocaleDateString('en-US')}</p>}
				{
					updatedDate && (
						<div>
							Last updated on <time>{updatedDate}</time>
						</div>
					)
				}
				<hr />
				<slot />
			</article>
		</main>
		<!-- {heroImage && <img width={720} height={360} src={heroImage} alt="" />} -->
		<Footer />
	</body>
</html>
