---
import HeaderLink from "./HeaderLink.astro";
import Socials from "./Socials.astro";
---

<header>
  <nav class="header">
    <div class="logo-container">
      <a href="/" class="logo-link">
        <div class="logo-shape">
          <svg width="40" height="40"><use href="#svg8712032193"></use></svg>
        </div>
        <p class="name" style="font-size: 42px;">Samar</p>
      </a>
    </div>

    <div class="menu-items" id="menu-items">
      <HeaderLink class="hover-underline-animation" href="/about">
        About
      </HeaderLink>
      <HeaderLink class="hover-underline-animation" href="/projects">
        Projects
      </HeaderLink>
      <HeaderLink class="hover-underline-animation" href="/caseStudy">
        Case Studies
      </HeaderLink>
      <HeaderLink class="hover-underline-animation" href="/blog">
        Blog
      </HeaderLink>

      <div class="footer-overlay" id="footer-overlay">
        <Socials />
      </div>
    </div>

    <div class="menu-icon" id="menu-icon">&#9776;</div>
  </nav>
</header>

<style>
  .footer-overlay {
    display: none;
  }

  .header {
    margin: 1em auto;
    padding: 0em 2em 0em 0em;
    max-width: 1000px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(0, 0, 0, 0);
    width: 100%;
    position: relative;
    z-index: 10;
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: black;
  }

  .logo-shape {
    margin-right: 0.5rem;
  }

  .menu-items {
    display: flex;
    gap: 2rem;
  }

  .hover-underline-animation {
    text-decoration: none;
    position: relative;
    font-weight: bold;
    color: #588157;
  }

  .hover-underline-animation::after {
    content: "";
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #588157;
    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  .hover-underline-animation:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  .menu-icon {
    font-size: 30px;
    cursor: pointer;
    display: none;
    z-index: 20;
  }

  /* Overlay menu styles */
  .menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(191, 205, 166); /* Dark overlay */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    transition: opacity 0.3s ease-in-out, visibility 0.3s ease-in-out;
    opacity: 0;
    visibility: hidden;
    z-index: 15;
  }

  .menu-overlay a {
    color: #588157;
    font-size: 2rem;
    text-decoration: none;
  }

  .menu-overlay {
    opacity: 1;
    visibility: visible;
  }

  @media only screen and (max-width: 680px) {
    .logo-link {
      display: flex;
      flex-direction: row-reverse;
    }

    .menu-icon {
      display: block;
    }

    .menu-items {
      display: none;
    }

    .menu-overlay {
      display: flex;
    }

    .footer-overlay {
      display: block;
      margin-top: 20px;
    }

    .socials {
      width: 285;
    }
  }
</style>

<script>
  const menuIcon = document.getElementById("menu-icon");
  const menuItemsOverlay = document.getElementById("menu-items");
  const footerOverlay = document.getElementById("footer-overlay");

  menuIcon.addEventListener("click", () => {
    menuItemsOverlay.classList.toggle("menu-overlay");
    footerOverlay.classList.toggle("footer-visible");
  });
</script>
