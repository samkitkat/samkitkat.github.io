---
import SiteLayout from "../layouts/SiteLayout.astro";
import { personalProjects, workProjects } from "../data/projects";
import { posts } from "../data/posts";
import { links } from "../data/consts";

const featuredPersonal = personalProjects.slice(0, 3);
const featuredWork = workProjects.slice(0, 2);
const featuredPosts = posts.slice(0, 2);
---

<SiteLayout>
  <!-- HERO -->
  <section class="hero" aria-labelledby="hero-title">
    <div class="hero-copy">
      <p class="eyebrow">♡ Welcome to My Portfolio ♡</p>
      <h1 id="hero-title" class="hero-title"></h1>
      <p class="hero-subtitle">
        Hi, I’m Samar — I’m passionate about creating people-centered experiences
        that blend storytelling, technology, and community impact.
      </p>
      <p class="hero-subtitle">
        My background includes work in community engagement, event planning,
        digital content creation, and web development. I’ve helped organize
        hackathons, supported civic outreach through campus roles, and worked
        with nonprofits to build accessible tools and messaging.
      </p>
      <p class="hero-subtitle">
        Whether I’m coordinating logistics, consulting on communication
        strategy, or designing a website, I’m focused on work that connects and
        empowers people.
      </p>
      <div class="cta-row">
        <a href="/projects" class="btn-primary">View projects</a>
        <a href="/#about" class="btn-ghost">or learn more about me →</a>
      </div>
    </div>
    <div class="hero-photo-wrap">
      <div class="hero-photo-card">
        <!-- <div class="hero-photo-placeholder"></div> -->
        <img class="hero-photo" src="../../assets/images/about-me-img.jpg" />
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="section" aria-labelledby="about-title">
    <div class="section-header">
      <div>
        <p class="section-kicker">About</p>
        <h2 id="about-title" class="section-title">Who I am</h2>
      </div>
    </div>
    <div class="about-layout">
      <div class="about-card">
        <p class="section-body">
          I’m interested in how people communicate across cultures and contexts
          — and how media, platforms, and power shape those conversations.
        </p>
        <p class="section-body">
          I’m currently in University pursuing a bachelors in Communication
          Studies with a minor in Computer Science. I care deeply about
          meaningful communication, collaborative problem-solving, and building
          systems that make space for everyone’s voice. My studies help me
          bridge the gap between people and technology, and I’m always looking
          for ways to make ideas more accessible, inclusive, and impactful.
        </p>
        <a
        href="/about"
        class="project-link"
        target="_blank"
        rel="noreferrer"
      >
        more →
      </a>
      </div>

      <div class="about-card">
        <p class="section-body">watch me chaos-test code in real time</p>

        <ul class="boxes">
          <li class="box" title="follow me on twitch ;)">
            <div class="frame1">
              <iframe
                class="frame"
                src={links.iframeTwitch.url}
                allowfullscreen="true"></iframe>
            </div>
          </li>

          <li class="box" title="watch my yt vids ;)">
            <div class="frame1">
              <iframe
                class="frame"
                src={links.iframeYoutube.url}
                title="YouTube video player"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <!-- PERSONAL PROJECTS PREVIEW -->
  <section id="projects" class="section" aria-labelledby="personal-title">
    <div class="section-header">
      <div>
        <p class="section-kicker">Personal Projects</p>
        <h2 id="personal-title" class="section-title">
          Things I’ve made for fun, learning, and curiosity
        </h2>
      </div>
      <a href="/projects" class="section-link">View all →</a>
    </div>

    <p class="section-body">
      A few recent creative coding and personal experiments. For the full
      collection, check out the projects page.
    </p>

    <div class="projects-grid">
      {
        featuredPersonal.map((project) => (
          <article class="project-card">
            <div class="project-header">
              <p class="project-role">{project.role}</p>

              {project.githubURL && (
                <a href={project.githubURL} target="_blank" class="github-icon">
                  <img src="/assets/icons/github.svg" alt="GitHub repo" />
                </a>
              )}
            </div>

            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
           
            <div class="card-footer">
            <a
              href={project.projectURL}
              class="project-link"
              target="_blank"
              rel="noreferrer"
            >
              View project →
            </a>
            </div>
            {project.caseStudy && (
              <a href={project.caseStudy} class="project-link">
                View case study →
              </a>
            )}
          </article>
        ))
      }
    </div>
  </section>

  <!-- WORK PROJECTS PREVIEW -->
  <section id="client-work" class="section" aria-labelledby="work-title">
    <div class="section-header">
      <div>
        <p class="section-kicker">Client & Work Projects</p>
        <h2 id="work-title" class="section-title">
          Websites & visual work for organizations
        </h2>
      </div>
      <a href="/projects#work-projects" class="section-link">View all →</a>
    </div>

    <p class="section-body">

    </p>

    <div class="projects-grid">
      {
        featuredWork.map((work) => (
          <article class="project-card">
            <p class="project-role">{work.role}</p>
            <h3 class="project-title">{work.title}</h3>
            <p class="project-description">{work.description}</p>
            <div class="card-footer">
            <a
              href={work.projectURL}
              class="project-link"
              target="_blank"
              rel="noreferrer"
            >
              View project →
            </a>
            </div>
            {work.caseStudy && (
              <a href={work.caseStudy} class="project-link">
                View case study →
              </a>
            )}
          </article>
        ))
      }
    </div>
  </section>

  <!-- BLOG PREVIEW -->
  <section id="blog" class="section" aria-labelledby="blog-title">
    <div class="section-header">
      <div>
        <p class="section-kicker">Blog</p>
        <h2 id="blog-title" class="section-title">Writing &amp; notes</h2>
      </div>
      <a href="/blog" class="section-link">View all →</a>
    </div>

    <p class="section-body">
    </p>

    <div class="posts-grid">
      {
        featuredPosts.map((post) => (
          <article class="post-card">
            <p class="post-meta">{post.date}</p>
            <h3 class="post-title">{post.title}</h3>
            <p class="post-description">{post.description}</p>
            <a
              href={post.link}
              class="project-link"
              target="_blank"
              rel="noreferrer"
            >
              read →
            </a>
          </article>
        ))
      }
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="section" aria-labelledby="contact-title">
    <div class="section-header">
      <div>
        <p class="section-kicker">Contact</p>
        <h2 id="contact-title" class="section-title">Let's Chat!</h2>
      </div>
    </div>

    <p class="section-body">
      I’m open to chatting about projects, collaborations, interviews, or just
      swapping thoughts about culture and being very online. If something here
      resonated with you, I’d love to hear from you.
    </p>
    <p class="section-body">
      Feel free to reach out to me on any of my socials!
    </p>
    </div>
  </section>
</SiteLayout>
